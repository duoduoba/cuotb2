.editor {
  /*background-color: blueviolet; */
  padding: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rebeccapurple;
}


.convasAttr {
  background-color:black;
  width: 100%;
  height: 100%;
}
 

.command {
  position: fixed;
  padding: 0;
  width: 40 rpx;
  height: 40rpx;
  background-color: royalblue;
}

.section-input {
  z-index: 5;
  padding: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: fixed;
  bottom: 5rpx;
  left: 5rpx;
  width: 60rpx;
  height: 260rpx;
  box-sizing: border-box;
}

.btnControl {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color:cadetblue;
}

.cutView {
  border: 1px solid gray;
  position: absolute;
  background-color: rosybrown;
  opacity: 0.4;
}

.upBtn, .downBtn, .upLeftBtn, .upRightBtn, .downLeftBtn, .downRightBtn,
.centerLeftBtn, .centerRightBtn {
  position: absolute;
  background: rgb(11, 66, 231);
  z-index: 5; 
}

.upBtn {
  top: 0px;
  left: 50%;
  width: 120rpx;
  height: 40rpx;
  cursor: n-resize;
}

.downBtn {
  bottom: 0px;
  left: 50%;
  cursor: s-resize;
  width: 120rpx;
  height: 40rpx;
}


.centerLeftBtn {
  top: 50%;
  left: 0px;
  cursor: w-resize;
  width: 40rpx;
  height: 120rpx;
}

.centerRightBtn {
  top: 50%;
  right: 0px;
  cursor: e-resize;
  width: 40rpx;
  height: 120rpx;
}
