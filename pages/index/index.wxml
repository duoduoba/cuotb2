<view class="container">
  <view class='headinfo'>
    公告区
    
  </view>
  <view class="cuoti_status">
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <block class="tmp" wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="../../res/math.jpg" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
    </view>
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <block class="tmp" wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="../../res/math.jpg" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
    </view>

  </view>

  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>