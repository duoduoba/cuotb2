/* pages/done.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  font-size: 26rpx;
}

.tag {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  align-items: center;

  flex-wrap: wrap;
}

.tag-title {
  padding: 15rpx;
  padding-bottom: 10rpx;
  margin-top: 5rpx;
}

.tag-item {
  padding: 15rpx;
  margin-top: 5rpx;
  margin-left: 15rpx;
  color: rgb(73, 70, 77);
  border-style: solid;
  border-width: 1rpx;
  border-color: gray;
  background-color: snow;
  box-sizing: inline;
}

.timu {
  display: flex;
  flex-direction: column;
  align-items: center;
  
  width: 100%;
}

.timu-title {
  padding: 15rpx;
  padding-bottom: 10rpx;
  margin-top: 5rpx;
  align-self: flex-start;
}

.input_self {
   padding: 0rpx;
  width: 180rpx;
  height: 30rpx;
  border-style: solid;
  border-width: 1rpx;
  border-left: none;
  border-right: none;
  border-top: none;
  border-color:rgba(65, 105, 225, 0.555);
  box-sizing: inline;
  height: 26rpx;
}