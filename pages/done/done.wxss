/* pages/done.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  font-size: 25rpx;
}

.tag {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  align-items: center;
  background-color: sandybrown;
  flex-wrap: wrap;
}

.tag-title {
  padding: 15rpx;
  padding-bottom: 10rpx;
  margin-top: 5rpx;
}

.tag-item {
  padding: 15rpx;
  margin-left: 15rpx;
  color: rgb(73, 70, 77);
  border-style: solid;
  border-width: 1rpx;
  border-color: gray;
  background-color: snow;
}

.timu {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: royalblue;
  width: 100%;
}

.timu-title {
  align-self: flex-start;
  padding: 15rpx;
  padding-bottom: 10rpx;
  margin-top: 5rpx;
}

.timu_pic {
  width: 100%;
  height: 400rpx;
}
